<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div style="text-align:center;">
                    @*<p class="site-title">@Html.ActionLink("your logo here", "Index", "Home")</p>*@
                    <img src="~/Images/logoBeer.png" style="width: 450px; margin-bottom: 20px;" />
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix" style="text-align:center;">


                @RenderBody()


            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div style="text-align:center;margin-top: -11px;">
                    <p>&copy; @DateTime.Now.Year - Marcelo Vargas & Hugo Oliveira</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
